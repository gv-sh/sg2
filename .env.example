# SpecGen Environment Configuration
# Copy this file to .env and fill in your actual values

# ===========================================
# Core Application Settings
# ===========================================

# Environment (development, production, test)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# ===========================================
# OpenAI Configuration (Required)
# ===========================================

# Your OpenAI API key - Get it from https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Database Configuration
# ===========================================

# SQLite database file path (relative to project root)
DB_PATH=./data/specgen.db

# ===========================================
# Production Settings (for deployment)
# ===========================================

# Allowed CORS origins for production (comma-separated)
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API base URL for production
API_BASE_URL=https://api.yourdomain.com

# ===========================================
# Instagram Configuration (Optional)
# ===========================================

# Instagram Business Account integration for carousel sharing
# You need a Facebook App with Instagram Basic Display permissions
# INSTAGRAM_APP_ID=your_facebook_page_id_here
# INSTAGRAM_APP_SECRET=your_facebook_app_secret_here 
# INSTAGRAM_ACCESS_TOKEN=your_facebook_page_access_token_here

# Instructions:
# 1. Create a Facebook App at https://developers.facebook.com/
# 2. Add Instagram Basic Display product to your app
# 3. Create a Facebook Page and link it to an Instagram Business Account
# 4. Generate a Page Access Token with instagram_content_publish permissions
# 5. Use the Facebook Page ID as INSTAGRAM_APP_ID

# ===========================================
# Optional Settings
# ===========================================

# Logging level (error, warn, info, debug)
LOG_LEVEL=info

# Package version (usually auto-detected)
npm_package_version=1.0.0