{
  "name": "@gv-sh/specgen",
  "version": "1.0.0",
  "description": "SpecGen - Unified application for server, admin, and user interfaces",
  "private": true,
  "main": "src/server/server.js",
  "scripts": {
    "dev": "npm run build && cd src/server && NODE_ENV=development node --watch server.js",
    "start": "npm run build && cd src/server && NODE_ENV=production node server.js",
    "build": "react-scripts build",
    "test": "npm run test:server && npm run test:client && npm run test:integration",
    "test:server": "cd src/server && NODE_ENV=test NODE_OPTIONS=--experimental-vm-modules jest --runInBand --config jest.config.js --colors=true",
    "test:client": "react-scripts test --watchAll=false",
    "test:integration": "NODE_ENV=test jest --config=tests/integration/jest.config.js",
    "lint": "cd src/server && eslint .",
    "clean": "rm -rf node_modules build src/server/data/*.db"
  },
  "keywords": [
    "specgen",
    "fiction-generator",
    "api",
    "admin",
    "user-interface"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/gv-sh/sg2.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "@hapi/boom": "^10.0.1",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^13.5.0",
    "autoprefixer": "^10.4.19",
    "axios": "^1.8.4",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dompurify": "^3.2.6",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^8.2.1",
    "framer-motion": "^12.9.1",
    "gsap": "^3.13.0",
    "helmet": "^8.1.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.503.0",
    "pino": "^10.1.0",
    "postcss": "^8.4.35",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-router-dom": "^6.28.0",
    "react-scripts": "5.0.1",
    "sharp": "^0.34.5",
    "sqlite3": "^5.1.7",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwind-merge": "^3.2.0",
    "tailwindcss": "^3.4.1",
    "tailwindcss-animate": "^1.0.7",
    "three": "^0.176.0",
    "uuid": "^13.0.0",
    "web-vitals": "^2.1.4",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@jest/globals": "^30.2.0",
    "concurrently": "^9.1.2",
    "eslint": "^9.25.1",
    "globals": "^16.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^13.1.2",
    "supertest": "^6.3.4"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(axios)/)"
    ]
  }
}
