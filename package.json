{
  "name": "@gv-sh/specgen",
  "version": "1.0.0",
  "description": "SpecGen - Consolidated repository for server, admin, and user applications",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "install:all": "npm install",
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:admin\" \"npm run dev:user\"",
    "dev:server": "npm run dev --workspace=@gv-sh/specgen-server",
    "dev:admin": "npm run start --workspace=@gv-sh/specgen-admin",
    "dev:user": "npm run start --workspace=@gv-sh/specgen-user",
    "start:server": "npm run start --workspace=@gv-sh/specgen-server",
    "start:admin": "npm run start --workspace=@gv-sh/specgen-admin",
    "start:user": "npm run start --workspace=@gv-sh/specgen-user",
    "build": "npm run build --workspaces --if-present",
    "build:admin": "npm run build --workspace=@gv-sh/specgen-admin",
    "build:user": "npm run build --workspace=@gv-sh/specgen-user",
    "test": "npm run test --workspaces --if-present",
    "test:server": "npm run test --workspace=@gv-sh/specgen-server",
    "test:admin": "npm run test --workspace=@gv-sh/specgen-admin",
    "test:user": "npm run test --workspace=@gv-sh/specgen-user",
    "test:integration": "NODE_ENV=test jest --config=tests/integration/jest.config.js",
    "lint": "npm run lint --workspaces --if-present",
    "clean": "rm -rf node_modules packages/*/node_modules packages/*/build packages/server/package-lock.json",
    "postinstall": "echo 'All packages installed successfully!'"
  },
  "keywords": [
    "specgen",
    "monorepo",
    "fiction-generator",
    "api",
    "admin",
    "user-interface"
  ],
  "author": "",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/gv-sh/sg2.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.1.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.4",
    "axios": "^1.8.4"
  }
}
